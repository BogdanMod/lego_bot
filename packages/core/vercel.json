{
  "functions": {
    "api/**/*.ts": {
      "includeFiles": "node_modules/{axios/dist/node,@dialogue-constructor/shared}/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/webhook",
      "destination": "/api/webhook"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/process-broadcasts",
      "schedule": "0 0 * * *"
    }
  ]
}

