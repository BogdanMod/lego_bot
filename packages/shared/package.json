{
  "name": "@dialogue-constructor/shared",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "browser": {
        "types": "./dist/browser.d.ts",
        "import": "./dist/browser.js"
      },
      "require": "./dist-cjs/index.js",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./browser": {
      "require": "./dist/browser.js",
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "default": "./dist/browser.js"
    },
    "./server": {
      "require": "./dist-cjs/server.js",
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "default": "./dist/server.js"
    },
    "./cache/bot-schema-cache": {
      "require": "./dist-cjs/cache/bot-schema-cache.js",
      "types": "./dist/cache/bot-schema-cache.d.ts",
      "import": "./dist/cache/bot-schema-cache.js",
      "default": "./dist/cache/bot-schema-cache.js"
    }
  },
  "typesVersions": {
    "*": {
      "server": [
        "dist/server.d.ts"
      ],
      "server/*": [
        "dist/server/*"
      ],
      "browser": [
        "dist/browser.d.ts"
      ],
      "browser/*": [
        "dist/browser/*"
      ]
    }
  },
  "scripts": {
    "build": "tsc && tsc -p tsconfig.cjs.json && node ./scripts/write-cjs-package-json.mjs",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "isomorphic-dompurify": "^2.10.0",
    "pino": "^8.17.0",
    "pino-roll": "^4.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "pino-pretty": "^10.3.0",
    "typescript": "^5.3.0"
  }
}

